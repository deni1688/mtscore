{
  "compilerOptions": {
    "outDir": "dist/",
    "rootDir": "lib/",
    "target": "es2019",
    "lib": [
      "es2019",
      "dom"
    ],
    "types": [
      "reflect-metadata"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "lib/"
  ],
  "exclude": [
    "node_modules"
  ]
}

{
  "compilerOptions": {
    "outDir": "dist/",
    "rootDir": "lib/",
    "target": "es2019",
    "lib": [
      "es2019",
      "dom"
    ],
    "types": [
      "reflect-metadata",
      "node",
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "lib/",
    "node_modules/@types"
  ],
  "exclude": [
    "node_modules"
  ]
}